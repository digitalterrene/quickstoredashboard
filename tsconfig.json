{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/application_shell/index.jsx",
    "src/context/auth-context/AuthContext.jsx",
    "src/components/ui-components/front-store-configs/heros/RoundedImageCarousel.jsx",
    "src/components/page-components/dashboard/charts/ColumnChartWithMarkers.jsx",
    "src/components/page-components/dashboard/charts/ColumnWithMarkers.jsx",
    "src/components/page-components/dashboard/charts/ColumnChartStacked.jsx",
    "src/components/page-components/dashboard/charts/ColumnChart.jsx",
    "src/components/ui-components/getting-started/GettingStartedComponent.jsx",
    "src/components/page-components/customer-support/CustomerSupportPage.tsx",
    "src/components/page-components/front-store-configs/FrontStoreConfiguration.jsx"
  ],
  "exclude": ["node_modules"]
}
